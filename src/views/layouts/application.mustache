<html>
<head>
  <title>{{ page_title }}{{# page_title }} &mdash; {{/ page_title }}{{ site_title }}</title>
{{# fonts }}
  {{# src }}
  <script type="text/javascript" charset="utf-8" src="{{{ src }}}"></script>
  {{/ src }}
  {{# inline }}
  <script type="text/javascript" charset="utf-8">{{{ inline }}}</script>
  {{/ inline }}
  {{# href }}
    <link rel="stylesheet" type="text/css" href="{{{ href }}}">
  {{/ href }}
{{/ fonts }}
{{# stylesheets }}
<link rel="stylesheet" type="text/css" href="{{{ . }}}">
{{/ stylesheets }}
<link rel="stylesheet" media="print" type="text/css" href="{{ print_stylesheet }}">

{{# metatags }}
<meta {{# property }}property="{{ property }}" {{/ property }}{{# name }}name="{{ name }}" {{/ name }}{{# content }}content="{{ content }}" {{/ content }}>
{{/ metatags }}
</head>
<body>
<header>
  <nav>
    <ul>
      <li><a class="logo" href="{{ root_url }}">Setlister</a></li>
      <li><a href="{{ songs_path }}">Songs</a></li>
      <li><a href="{{ setlists_path }}">Setlists</a></li>
    </ul>
  </nav>
</header>
<section>
  {{# messages.info }}
  <div class="info flash">{{ . }}</div>
  {{/ messages.info }}
  {{# messages.error }}
  <div class="error flash">{{ . }}</div>
  {{/ messages.error }}
  {{# messages.warning }}
  <div class="warning flash">{{ . }}</div>
  {{/ messages.warning }}
</section>
<section>
  {{{ yield }}}
</section>
{{# templates }}
<script type="text/mustache" id="{{ id }}">
{{{ text }}}</script>
{{/ templates }}

{{# javascripts }}
<script type="text/javascript" charset="utf-8" src="{{{ . }}}"></script>
{{/ javascripts }}
</body>
</html>
